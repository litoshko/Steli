<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Натяжні стелі</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <section class="header-class">
                <div class="content-wrapper">
                    <div class="float-left">
                        <p class="site-title">@Html.ActionLink("Натяжні Стелі", "Index", "Home")</p>
                    </div>
                    <div class="float-right">
                        <!--<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>-->
                        <nav>
                            <ul id="menu">
                                <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                                <li>@Html.ActionLink("Про нас", "About", "Home")</li>
                                <li>@Html.ActionLink("Акції", "Offers", "Home")</li>
                                <li>@Html.ActionLink("Ціни", "Prices", "Home")</li>
                                <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </section>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
